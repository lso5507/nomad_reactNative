	@RequestMapping(value = "/", method = RequestMethod.GET)
	public String home(HttpServletRequest request) {	
		
		HttpSession session = request.getSession();
		
		
		if(mainService.view()!= 1 ) {
			System.out.println("Not Found Data!!");
			
		}
		session.setAttribute("folder",dataVO.getFolderName());
		
		return "home";
	}	
	
	@RequestMapping(value="/install",method = RequestMethod.GET)
	public String installForm(HttpServletRequest request) {
		HttpSession session = request.getSession();
		System.out.println("Install_GET IN");
		
		if(mainService.view()!= 1 ) {
			System.out.println(" Data ERROR!!");
			
		}
		session.setAttribute("folder",dataVO.getFolderName());
		
		return "installForm";
	}
	@RequestMapping(value="/install",method = RequestMethod.PUT)
	public void install(HttpServletResponse response
			,HttpServletRequest request, @RequestParam(value="chk_info", required=true, defaultValue="0")String chk) throws IOException{
		
		dataVO.setPackageName(chk);
		System.out.println(chk);
		
//		response.sendRedirect("/version/install");
		return "install";
	}
